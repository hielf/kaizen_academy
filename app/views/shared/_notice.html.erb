<%# Modern Notice System - Consistent with Alert System %>
<% if flash[:notice] %>
  <div class="alert-item mb-3 transform transition-all duration-300 ease-in-out opacity-0 translate-y-[-10px]" 
       data-alert-type="notice"
       data-controller="alert"
       data-alert-auto-dismiss-value="true"
       data-alert-duration-value="4000"
       role="alert"
       aria-live="polite"
       aria-atomic="true">
    <div class="bg-green-50 border border-green-200 text-green-800 shadow-green-100 rounded-lg p-4 shadow-lg">
      <div class="flex items-start">
        <div class="flex-shrink-0">
          <div class="text-green-400" aria-hidden="true">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
            </svg>
          </div>
        </div>
        <div class="ml-3 flex-1">
          <div class="text-sm font-medium">
            <span class="font-semibold">Success</span>
            <span class="ml-1"><%= flash[:notice] %></span>
          </div>
        </div>
        <div class="ml-auto pl-3">
          <div class="-mx-1.5 -my-1.5">
            <button type="button" 
                    class="text-green-400 bg-transparent rounded-lg inline-flex text-sm p-1.5 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-400 focus:ring-offset-2 transition-colors duration-200"
                    data-action="click->alert#dismiss"
                    aria-label="Close notice">
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
              </svg>
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %> 