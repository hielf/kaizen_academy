<%# Modern Error System for Form Validation Errors %>
<% if defined?(object) && object&.errors&.any? %>
  <div id="error-container" class="mb-6 relative animate-in slide-in-from-top-4 duration-300">
    <!-- Modern error notification with gradient background and glass effect -->
    <div class="bg-gradient-to-r from-red-50 to-pink-50 backdrop-blur-sm border border-red-200/50 rounded-xl p-5 shadow-lg shadow-red-100/50">
      <!-- Animated border accent -->
      <div class="absolute top-0 left-0 right-0 h-1 bg-gradient-to-r from-red-400 via-red-500 to-pink-500 rounded-t-xl"></div>
      
      <div class="flex items-start space-x-4">
        <!-- Modern error icon with subtle animation -->
        <div class="flex-shrink-0 mt-0.5">
          <div class="relative">
            <div class="w-6 h-6 bg-red-100 rounded-full flex items-center justify-center animate-pulse">
              <svg class="w-4 h-4 text-red-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z" />
              </svg>
            </div>
          </div>
        </div>
        
        <!-- Content area -->
        <div class="flex-1 min-w-0">
          <!-- Error messages with modern styling and dismiss button -->
          <div class="flex items-start justify-between">
            <div class="flex-1 min-w-0">
              <h3 class="text-sm font-medium text-red-800 mb-2">
                Please correct the following errors:
              </h3>
              <ul class="space-y-2">
                <% object.errors.full_messages.each do |message| %>
                  <li class="flex items-start space-x-2">
                    <div class="flex-shrink-0 mt-1.5">
                      <div class="w-1.5 h-1.5 bg-red-400 rounded-full"></div>
                    </div>
                    <span class="text-sm text-red-700 leading-relaxed"><%= message %></span>
                  </li>
                <% end %>
              </ul>
            </div>
            <!-- Dismiss button -->
            <button type="button" onclick="this.closest('#error-container').style.display='none'" 
                    class="ml-4 flex-shrink-0 p-1 rounded-full text-red-400 hover:text-red-600 hover:bg-red-100 transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2">
              <svg class="w-4 h-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
              </svg>
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Add custom CSS for better animations if not already included -->
  <style>
    @keyframes slide-in-from-top-4 {
      from {
        transform: translateY(-1rem);
        opacity: 0;
      }
      to {
        transform: translateY(0);
        opacity: 1;
      }
    }
    .animate-in {
      animation: slide-in-from-top-4 0.3s ease-out;
    }
  </style>
<% end %> 