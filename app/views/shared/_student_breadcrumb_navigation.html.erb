<nav class="bg-white rounded-lg shadow-md p-4 mb-6" aria-label="Breadcrumb">
  <div class="flex items-center space-x-2 text-sm">
    <% breadcrumbs = [] %>
    
    <%# Start with Dashboard %>
    <% breadcrumbs << { name: 'Dashboard', path: root_path } %>
    
    <%# Add school if available (for student context) %>
    <% breadcrumbs << { name: 'Students', path: admin_students_path } %>

    
    <%# Add student if available %>
    <% if defined?(@student) && @student %>
      <% breadcrumbs << { name: @student.first_name + ' ' + @student.last_name, path: admin_student_path(@student) } %>
    <% end %>
    
    <% breadcrumbs.each_with_index do |crumb, index| %>
      <% if index > 0 %>
        <svg class="w-4 h-4 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
        </svg>
      <% end %>
      <%= link_to crumb[:name], crumb[:path], class: "text-blue-600 hover:text-blue-800 transition-colors duration-200 #{index == breadcrumbs.length - 1 ? 'font-bold text-gray-900' : ''}" %>
    <% end %>
  </div>
</nav> 