<!-- Top Navigation Bar -->
<%= render 'shared/navigation', page_title: 'Course Details' %>

<!-- Main Content -->
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Course Header -->
  <div class="mb-8">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold text-gray-900 mb-2"><%= @course.title %></h1>
        <p class="text-gray-600">Course details for <%= @course.school.name %></p>
      </div>
    </div>
  </div>

  <!-- Course Details -->
  <div class="bg-white rounded-lg shadow-md p-6 mb-8">
    <h2 class="text-2xl font-bold text-gray-900 mb-6">Course Information</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <p class="text-gray-600 mb-1">Description:</p>
        <p class="font-medium text-gray-900"><%= @course.description %></p>
      </div>
      <div>
        <p class="text-gray-600 mb-1">Term:</p>
        <p class="font-medium text-gray-900"><%= @course.term.name %></p>
      </div>
    </div>
    
    <!-- Action Buttons -->
    <div class="flex space-x-4 mt-6 pt-6 border-t border-gray-200">
      <%= link_to 'Purchase with Credit Card', '#', 
          class: 'bg-blue-500 hover:bg-blue-700 text-white font-medium py-2 px-6 rounded-md transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2' %>
    </div>
  </div>
</div> 