<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="text-2xl font-bold">Edit Term</h1>
      <p class="text-gray-600 mt-2">Edit term for <%= @school.name %></p>
    </div>
    <div class="flex space-x-4">
      <%= link_to 'View Term', admin_school_term_path(@school, @term), class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
      <%= link_to 'Back to Terms', admin_school_terms_path(@school), class: 'bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded' %>
    </div>
  </div>

  <div class="bg-white shadow-md rounded p-6">
    <%= render 'form', term: @term %>
  </div>
</div> 