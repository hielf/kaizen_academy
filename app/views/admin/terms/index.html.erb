<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <%= render 'shared/breadcrumb_navigation' %>
  <!-- Search Form -->
  <div class="bg-white shadow-md rounded p-6 mb-6">
    <%= form_with url: admin_school_terms_path(@school), method: :get, local: true, class: "flex items-center space-x-4" do |form| %>
      <div class="flex items-center space-x-4 flex-1">
        <%= form.label :name_filter, "Term Name", class: "text-sm font-medium text-gray-700" %>
        <%= form.text_field :name_filter, value: params[:name_filter], class: "flex-1 px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
      </div>
      <div class="flex items-center space-x-2">
        <%= form.submit "Search", class: "text-white px-4 py-2 rounded-md text-sm font-medium bg-emerald-600 hover:bg-emerald-700 transition-colors duration-200 mr-2" %>
        <%= link_to 'New Term', new_admin_school_term_path(@school), class: 'text-white px-4 py-2 rounded-md text-sm font-medium bg-slate-600 hover:bg-slate-700 transition-colors duration-200' %>
      </div>
    <% end %>
  </div>

  <div class="bg-white shadow-md rounded my-6">
    <table class="min-w-full">
      <thead>
        <tr class="bg-gray-100">
          <th class="px-6 py-3 border-b border-gray-200 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">Name</th>
          <th class="px-6 py-3 border-b border-gray-200 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">Start Date</th>
          <th class="px-6 py-3 border-b border-gray-200 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">End Date</th>
          <th class="px-6 py-3 border-b border-gray-200 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">Actions</th>
        </tr>
      </thead>
      <tbody class="bg-white">
        <% @terms.each do |term| %>
          <tr>
            <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-200">
              <div class="text-sm leading-5 text-gray-900"><%= link_to term.name, admin_school_term_path(@school, term), class: 'text-blue-600 hover:text-blue-900' %></div>
            </td>
            <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-200">
              <div class="text-sm leading-5 text-gray-900"><%= term.start_date.strftime("%B %d, %Y") %></div>
            </td>
            <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-200">
              <div class="text-sm leading-5 text-gray-900"><%= term.end_date.strftime("%B %d, %Y") %></div>
            </td>
            <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-200 text-sm leading-5">
              <div class="flex items-center space-x-3">
                <%= link_to 'Edit', edit_admin_school_term_path(@school, term), class: 'text-yellow-600 hover:text-yellow-900' %>
                <%= link_to 'Delete', admin_school_term_path(@school, term), 
                    method: :delete, 
                    class: 'text-red-600 hover:text-red-900', 
                    data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div> 