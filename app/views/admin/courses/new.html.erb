<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="text-2xl font-bold">New Course</h1>
      <p class="text-gray-600 mt-2">Add a new course to <%= @term.name %> in <%= @school.name %></p>
    </div>
    <div>
      <%= link_to 'Back to Courses', admin_school_term_courses_path(@school, @term), class: 'bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded' %>
    </div>
  </div>

  <div class="bg-white shadow-md rounded p-6">
    <%= render 'form' %>
  </div>
</div> 