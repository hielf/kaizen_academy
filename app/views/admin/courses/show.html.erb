<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <%= render 'shared/breadcrumb_navigation' %>

  <div class="bg-white shadow-md rounded p-6">
    <div class="mb-6">
      <h2 class="text-xl font-semibold mb-4">Course Details</h2>
      <div class="grid grid-cols-1 gap-4">
        <div>
          <p class="text-gray-600">Name:</p>
          <p class="font-medium"><%= @course.title %></p>
        </div>
        <div>
          <p class="text-gray-600">Description:</p>
          <p class="font-medium"><%= @course.description %></p>
        </div>
      </div>
    </div>

    <div class="mb-6">
      <h2 class="text-xl font-semibold mb-4">Statistics</h2>
      <div class="grid grid-cols-2 gap-4">
        <div class="bg-gray-50 p-4 rounded">
          <p class="text-gray-600">Total Enrollments</p>
          <p class="text-2xl font-bold"><%= @course.enrollments&.count || 0 %></p>
        </div>
      </div>
    </div>

    <!-- Action Buttons -->
    <div class="border-t border-gray-200 pt-6">
      <h3 class="text-lg font-medium text-gray-900 mb-4">Actions</h3>
      <div class="flex items-center space-x-3">
        <%= link_to 'Edit Course', edit_admin_school_term_course_path(@school, @term, @course), class: 'text-white px-4 py-2 rounded-md text-sm font-medium bg-emerald-600 hover:bg-emerald-700 transition-colors duration-200' %>
      </div>
    </div>
  </div>
</div> 