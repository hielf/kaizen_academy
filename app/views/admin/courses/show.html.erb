<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="text-2xl font-bold"><%= @course.title %></h1>
      <p class="text-gray-600 mt-2">Course in <%= @term.name %> for <%= @school.name %></p>
    </div>
    <div class="flex space-x-4">
      <%= link_to 'Edit', edit_admin_school_term_course_path(@school, @term, @course), class: 'bg-yellow-500 hover:bg-yellow-700 text-white font-bold py-2 px-4 rounded' %>
      <%= link_to 'Back to Courses', admin_school_term_courses_path(@school, @term), class: 'bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded' %>
    </div>
  </div>

  <% if notice %>
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
      <span class="block sm:inline"><%= notice %></span>
    </div>
  <% end %>

  <div class="bg-white shadow-md rounded p-6">
    <div class="mb-6">
      <h2 class="text-xl font-semibold mb-4">Name</h2>
      <div class="bg-gray-50 p-4 rounded">
        <p class="text-gray-900"><%= @course.title %></p>
      </div>
    </div>

    <div class="mb-6">
      <h2 class="text-xl font-semibold mb-4">Description</h2>
      <div class="bg-gray-50 p-4 rounded">
        <p class="text-gray-900"><%= @course.description %></p>
      </div>
    </div>

    <div class="mb-6">
      <h2 class="text-xl font-semibold mb-4">Statistics</h2>
      <div class="grid grid-cols-2 gap-4">
        <div class="bg-gray-50 p-4 rounded">
          <p class="text-gray-600">Total Enrollments</p>
          <p class="text-2xl font-bold"><%= @course.enrollments&.count || 0 %></p>
        </div>
      </div>
    </div>
  </div>
</div> 