<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="text-2xl font-bold">License: <%= @license.code %></h1>
      <p class="text-gray-600 mt-2">License in <%= @term.name %> for <%= @school.name %></p>
    </div>
    <div class="flex space-x-4">
      <%= link_to 'Edit', edit_admin_school_term_license_path(@school, @term, @license), class: 'bg-yellow-500 hover:bg-yellow-700 text-white font-bold py-2 px-4 rounded' %>
      <%= link_to 'Back to Licenses', admin_school_term_licenses_path(@school, @term), class: 'bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded' %>
    </div>
  </div>

  <% if notice %>
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
      <span class="block sm:inline"><%= notice %></span>
    </div>
  <% end %>

  <div class="bg-white shadow-md rounded p-6">
    <div class="mb-6">
      <h2 class="text-xl font-semibold mb-4">License Details</h2>
      <div class="grid grid-cols-2 gap-4">
        <div>
          <p class="text-gray-600">Code:</p>
          <p class="font-medium"><%= @license.code %></p>
        </div>
        <div>
          <p class="text-gray-600">Status:</p>
          <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full 
            <%= case @license.status
                when 'active'
                  'bg-green-100 text-green-800'
                when 'redeemed'
                  'bg-blue-100 text-blue-800'
                when 'expired'
                  'bg-red-100 text-red-800'
                when 'invalid'
                  'bg-gray-100 text-gray-800'
                end %>">
            <%= @license.status.titleize %>
          </span>
        </div>
        <div>
          <p class="text-gray-600">Issued At:</p>
          <p class="font-medium"><%= @license.issued_at.strftime("%B %d, %Y %H:%M") %></p>
        </div>
        <div>
          <p class="text-gray-600">Expires At:</p>
          <p class="font-medium"><%= @license.expires_at.strftime("%B %d, %Y %H:%M") %></p>
        </div>
        <% if @license.redeemed_at %>
          <div>
            <p class="text-gray-600">Redeemed At:</p>
            <p class="font-medium"><%= @license.redeemed_at.strftime("%B %d, %Y %H:%M") %></p>
          </div>
        <% end %>
      </div>
    </div>

    <div class="mb-6">
      <h2 class="text-xl font-semibold mb-4">Term Information</h2>
      <div class="grid grid-cols-2 gap-4">
        <div>
          <p class="text-gray-600">Term Name:</p>
          <p class="font-medium"><%= @term.name %></p>
        </div>
        <div>
          <p class="text-gray-600">School:</p>
          <p class="font-medium"><%= @school.name %></p>
        </div>
        <div>
          <p class="text-gray-600">Term Start Date:</p>
          <p class="font-medium"><%= @term.start_date.strftime("%B %d, %Y") %></p>
        </div>
        <div>
          <p class="text-gray-600">Term End Date:</p>
          <p class="font-medium"><%= @term.end_date.strftime("%B %d, %Y") %></p>
        </div>
      </div>
    </div>

    <% if @license.term_subscription %>
      <div class="mb-6">
        <h2 class="text-xl font-semibold mb-4">Subscription Information</h2>
        <div class="bg-blue-50 p-4 rounded">
          <p class="text-sm text-gray-600">This license has been redeemed and is associated with a term subscription.</p>
          <p class="text-sm font-medium mt-2">Subscription Status: <%= @license.term_subscription.status.titleize %></p>
        </div>
      </div>
    <% end %>
  </div>
</div> 