<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="text-2xl font-bold">Licenses for <%= @term.name %></h1>
      <p class="text-gray-600 mt-2">Term in <%= @school.name %></p>
    </div>
    <div class="flex space-x-4">
      <%= link_to 'New License', new_admin_school_term_license_path(@school, @term), class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
      <%= link_to 'Back to Term', admin_school_term_path(@school, @term), class: 'bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded' %>
    </div>
  </div>

  <% if notice %>
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
      <span class="block sm:inline"><%= notice %></span>
    </div>
  <% end %>

  <div class="bg-white shadow-md rounded-lg overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Code</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Issued At</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Expires At</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Redeemed At</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @licenses.each do |license| %>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="text-sm font-medium text-gray-900"><%= license.code %></div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full 
                <%= case license.status
                    when 'active'
                      'bg-green-100 text-green-800'
                    when 'redeemed'
                      'bg-blue-100 text-blue-800'
                    when 'expired'
                      'bg-red-100 text-red-800'
                    when 'invalid'
                      'bg-gray-100 text-gray-800'
                    end %>">
                <%= license.status.titleize %>
              </span>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="text-sm text-gray-900"><%= license.issued_at.strftime("%B %d, %Y %H:%M") %></div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="text-sm text-gray-900"><%= license.expires_at.strftime("%B %d, %Y %H:%M") %></div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="text-sm text-gray-900"><%= license.redeemed_at&.strftime("%B %d, %Y %H:%M") || "Not redeemed" %></div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
              <%= link_to 'View', admin_school_term_license_path(@school, @term, license), class: 'text-blue-600 hover:text-blue-900 mr-3' %>
              <%= link_to 'Edit', edit_admin_school_term_license_path(@school, @term, license), class: 'text-yellow-600 hover:text-yellow-900 mr-3' %>
              <%= button_to 'Delete', admin_school_term_license_path(@school, @term, license), method: :delete, class: 'text-red-600 hover:text-red-900', form: { data: { turbo_confirm: 'Are you sure?' } } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div> 