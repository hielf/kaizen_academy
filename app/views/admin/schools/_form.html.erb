<% object = school %>
<%= form_with(model: [:admin, school], class: "space-y-6") do |form| %>
  <div>
    <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :name, 
        class: "mt-1 block w-full rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 #{school.errors[:name].any? ? 'border-red-300' : 'border-gray-300'}" %>
    <% if school.errors[:name].any? %>
      <p class="mt-1 text-sm text-red-600"><%= school.errors[:name].first %></p>
    <% end %>
  </div>

  <div class="flex items-center justify-end space-x-3">
    <%= link_to 'Cancel', admin_schools_path, class: "text-gray-600 px-4 py-2 rounded-md text-sm font-medium hover:text-gray-900 transition-colors duration-200" %>
    <%= form.submit class: "text-white px-4 py-2 rounded-md text-sm font-medium bg-emerald-600 hover:bg-emerald-700 transition-colors duration-200" %>
  </div>
<% end %> 