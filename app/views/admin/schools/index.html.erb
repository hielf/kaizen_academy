<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold">Schools</h1>
    <div class="flex space-x-4">
      <%= link_to 'New School', new_admin_school_path, class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
      <%= link_to 'Back to Admin Dashboard', root_path, class: 'bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded' %>
    </div>
  </div>

  <% if notice %>
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
      <span class="block sm:inline"><%= notice %></span>
    </div>
  <% end %>

  <!-- Search Form -->
  <div class="bg-white shadow-md rounded p-6 mb-6">
    <%= form_with url: admin_schools_path, method: :get, local: true, class: "flex items-center space-x-4" do |form| %>
      <div class="flex items-center space-x-4 flex-1">
        <%= form.label :name_filter, "School Name", class: "text-sm font-medium text-gray-700" %>
        <%= form.text_field :name_filter, value: params[:name_filter], class: "flex-1 px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
      </div>
      <div class="flex items-center space-x-2">
        <%= form.submit "Search", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mr-2" %>
        <%= link_to "Clear", admin_schools_path, class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
      </div>
    <% end %>
  </div>

  <div class="bg-white shadow-md rounded my-6">
    <table class="min-w-full">
      <thead>
        <tr class="bg-gray-100">
          <th class="px-6 py-3 border-b border-gray-200 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">Name</th>
          <th class="px-6 py-3 border-b border-gray-200 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">Actions</th>
        </tr>
      </thead>
      <tbody class="bg-white">
        <% @schools.each do |school| %>
          <tr>
            <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-200">
              <div class="text-sm leading-5 text-gray-900"><%= link_to school.name, admin_school_path(school), class: 'text-blue-600 hover:text-blue-900' %></div>
            </td>
            <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-200 text-sm leading-5">
              <div class="flex items-center space-x-3">
                <%= link_to 'Edit', edit_admin_school_path(school), class: 'text-yellow-600 hover:text-yellow-900' %>
                <%= button_to 'Delete', admin_school_path(school), method: :delete, class: 'text-red-600 hover:text-red-900', data: { confirm: 'Are you sure?' } %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div> 