<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <%= render 'shared/breadcrumb_navigation' %>

  <div class="bg-white shadow-md rounded p-6">
    <div class="mb-6">
      <h2 class="text-xl font-semibold mb-4">School Details</h2>
      <div class="grid grid-cols-2 gap-4">
        <div>
          <p class="text-gray-600">Name:</p>
          <p class="font-medium"><%= @school.name %></p>
        </div>
      </div>
    </div>

    <div class="mb-6">
      <h2 class="text-xl font-semibold mb-4">Statistics</h2>
      <div class="grid grid-cols-3 gap-4">
        <div class="bg-gray-50 p-4 rounded">
          <p class="text-gray-600">Total Students</p>
          <p class="text-2xl font-bold"><%= @school.students.count %></p>
        </div>
        <div class="bg-gray-50 p-4 rounded">
          <p class="text-gray-600">Total Courses</p>
          <p class="text-2xl font-bold"><%= @school.courses.count %></p>
        </div>
        <div class="bg-gray-50 p-4 rounded">
          <p class="text-gray-600">Total Terms</p>
          <p class="text-2xl font-bold"><%= @school.terms.count %></p>
        </div>
      </div>
    </div>

    <!-- Action Buttons -->
    <div class="border-t border-gray-200 pt-6">
      <h3 class="text-lg font-medium text-gray-900 mb-4">Actions</h3>
      <div class="flex items-center space-x-3">
        <%= link_to 'Manage Terms', admin_school_terms_path(@school), class: 'text-white px-4 py-2 rounded-md text-sm font-medium bg-emerald-600 hover:bg-emerald-700 transition-colors duration-200' %>
        <%= link_to 'Edit School', edit_admin_school_path(@school), class: 'text-white px-4 py-2 rounded-md text-sm font-medium bg-slate-600 hover:bg-slate-700 transition-colors duration-200' %>
      </div>
    </div>
  </div>
</div> 