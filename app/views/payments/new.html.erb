<!-- Top Navigation Bar -->
<%= render 'shared/navigation', page_title: 'Complete Your Purchase' %>

<!-- Outer container for centering -->
<div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 flex flex-col justify-center items-center py-12 px-4 sm:px-6 lg:px-8">

  <!-- Main content wrapper with responsive width -->
  <div class="w-full max-w-md sm:max-w-lg space-y-8">

    <!-- Flash Messages -->
    <% if flash[:alert] || flash[:notice] || flash[:error] %>
      <div class="w-full">
        <% if flash[:alert] %>
          <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-md text-sm mb-4" role="alert">
            <div class="flex">
              <svg class="flex-shrink-0 h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
              </svg>
              <span class="ml-2"><%= flash[:alert] %></span>
            </div>
          </div>
        <% end %>
        
        <% if flash[:notice] %>
          <div class="bg-green-50 border border-green-200 text-green-700 px-4 py-3 rounded-md text-sm mb-4" role="alert">
            <div class="flex">
              <svg class="flex-shrink-0 h-5 w-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              <span class="ml-2"><%= flash[:notice] %></span>
            </div>
          </div>
        <% end %>
        
        <% if flash[:error] %>
          <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-md text-sm mb-4" role="alert">
            <div class="flex">
              <svg class="flex-shrink-0 h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
              </svg>
              <span class="ml-2"><%= flash[:error] %></span>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>

    <!-- Header Section -->
    <div class="text-center">
      <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
        Complete Your Purchase
      </h2>
      <p class="mt-2 text-center text-sm text-gray-600">
        Secure payment powered by Stripe
      </p>
    </div>

    <!-- Purchase Summary Card -->
    <div class="bg-white py-6 px-6 shadow-lg rounded-lg border border-gray-200">
      <h3 class="text-lg font-semibold text-gray-900 mb-4">Purchase Summary</h3>
      <div class="space-y-3">
        <div class="flex justify-between items-center">
          <span class="text-gray-600"><%= @purchasable.class.name %>:</span>
          <span class="font-medium text-gray-900"><%= @purchasable.class.name == 'Term' ? @purchasable.name : @purchasable.title %></span>
        </div>
        <% if @purchasable.respond_to?(:price) && @purchasable.price %>
          <div class="flex justify-between items-center border-t pt-3">
            <span class="text-gray-600">Total:</span>
            <span class="text-xl font-bold text-gray-900"><%= number_to_currency(@purchasable.price) %></span>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Payment Form Container -->
    <div class="bg-white py-8 px-4 shadow-2xl rounded-lg sm:px-10 border border-gray-200">
      <%= form_with(model: @credit_card_payment, url: payments_path, method: :post, local: true, html: { class: "space-y-6" }) do |form| %>
        <%= hidden_field_tag :signed_info, signed_purchasable(@purchasable) %>

        <!-- Card Number Field -->
        <div>
          <%= form.label :card_number, "Card Number", class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1 relative">
            <%= form.text_field :card_number, 
                placeholder: "1234 5678 9012 3456",
                maxlength: 19,
                pattern: "[0-9\s]{13,19}",
                class: "appearance-none block w-full px-3 py-3 pl-10 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm",
                oninput: "this.value = this.value.replace(/[^0-9]/g, '').replace(/(.{4})/g, '$1 ').trim()" %>
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" />
              </svg>
            </div>
          </div>
        </div>

        <!-- Expiry and CVV Fields -->
        <div class="grid grid-cols-2 gap-4">
          <div>
            <%= form.label :expiry_date, "Expiry Date", class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1">
              <%= form.text_field :expiry_date, 
                  placeholder: "MM/YY",
                  maxlength: 5,
                  pattern: "(0[1-9]|1[0-2])/[0-9]{2}",
                  class: "appearance-none block w-full px-3 py-3 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm",
                  oninput: "this.value = this.value.replace(/[^0-9]/g, '').replace(/(.{2})/, '$1/')" %>
            </div>
          </div>

          <div>
            <%= form.label :cvv, "CVV", class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1 relative">
              <%= form.text_field :cvv, 
                  placeholder: "123",
                  maxlength: 4,
                  pattern: "[0-9]{3,4}",
                  class: "appearance-none block w-full px-3 py-3 pr-10 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm",
                  oninput: "this.value = this.value.replace(/[^0-9]/g, '')" %>
              <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
                <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                </svg>
              </div>
            </div>
          </div>
        </div>

        <!-- Security Notice -->
        <div class="bg-gray-50 border border-gray-200 rounded-md p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <p class="text-sm text-gray-700">
                Your payment information is encrypted and secure. We never store your card details.
              </p>
            </div>
          </div>
        </div>

        <!-- Submit Button -->
        <div>
          <%= form.submit "Pay Now", 
              class: "w-full flex justify-center py-3 px-4 border border-transparent rounded-md shadow-lg text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transform transition-transform hover:scale-105" %>
        </div>
      <% end %>
    </div>
  </div>
</div> 