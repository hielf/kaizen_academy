<%= render 'shared/alert' %>
<%= render 'shared/notice' %>

<!-- Admin Dashboard -->
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold">Admin Dashboard</h1>
    <%= link_to 'Sign Out', destroy_user_session_path, 
          data: { turbo_method: :delete }, 
          class: 'bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded transition-colors duration-200' %>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <!-- Schools Management Card -->
    <div class="bg-white rounded-lg shadow-md p-6">
      <h2 class="text-xl font-semibold mb-4">Schools Management</h2>
      <p class="text-gray-600 mb-4">Manage schools, their courses, and student enrollments.</p>
      <%= link_to 'Manage Schools', admin_schools_path, class: 'inline-block bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
    </div>

    <!-- Students Management Card -->
    <div class="bg-white rounded-lg shadow-md p-6">
      <h2 class="text-xl font-semibold mb-4">Students Management</h2>
      <p class="text-gray-600 mb-4">View and manage student accounts, enrollments, and subscriptions.</p>
      <%= link_to 'Manage Students', admin_students_path, class: 'inline-block bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
    </div>

    <!-- Add more management cards here as needed -->
  </div>
</div> 